# K-ECP SSO 환경 변수
# 이 파일을 .env로 복사하여 사용

# ===== Keycloak Database =====
KEYCLOAK_DB_PASSWORD=your_secure_db_password_here

# ===== Keycloak Server =====
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_PORT=8180

# ===== Keycloak Admin =====
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_admin_password_here

# ===== Client Secrets (각 서비스에서 사용) =====
# K-ECP 메인 (user-console)
KECP_MAIN_CLIENT_SECRET=

# 마켓플레이스
KECP_MARKETPLACE_CLIENT_SECRET=

# 고객센터 (KustHub) - Public Client (PKCE) 사용으로 secret 불필요
# KECP_SUPPORT_CLIENT_SECRET=

# 운영 플랫폼 (Kohub)
KECP_KOHUB_CLIENT_SECRET=
